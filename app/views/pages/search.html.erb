<!-- Header -->
<header id="search">
    <div class="container">
        <div class="intro-text">
            <div class="intro-heading">Search For A Show</div>
        </div>
    </div>
</header>

<div id="results">
    <div class="container">        
        <% count = 0 %>
        <% @shows.each do |show| %>
            <% if count == 0  %>
                <div class="row">
            <% end %>
            <% count = count + 1 %>
                <div class="col-md-4">
                    <h2><%= show.name %></h2>
                    <div class="details">
                        <span class="location"><%= show.city %>, <%= show.state %></span>
                        <span class="date"><%= show.show_date %></span>
                        <span class="sup"><%= show.superintendent %></span>
                    </div>
                </div>
            <% if count == 3 %>
                <% count = 0 %>
                </div> <!-- .row -->
            <% end %>
        <% end %>
        <% if @shows.count % 3 != 0 %>
            </div>
        <% end %>
    </div>
</div>

