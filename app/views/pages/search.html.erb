<!-- Header -->
<header id="search">
    <div class="container">
        <div class="intro-text">
            <div class="intro-heading">Search For A Show</div>
        </div>
    </div>
</header>

<div id="results">
    <div class="container">        
        <% count = 0 %>
        <% @shows.each do |show| %>
            <% if count == 0  %>
                <div class="row">
            <% end %>
            <% count = count + 1 %>
                <div class="col-md-4">
                    <h2><%= show.name %></h2>
                    <div class="details">
                        <span class="location"><%= show.city %>, <%= show.state %></span>
                        <span class="date"><%= show.show_date %></span>
                        <span class="sup"><%= show.superintendent %></span>
                    </div>
                </div>
            <% if count == 3 %>
                <% count = 0 %>
                </div> <!-- .row -->
            <% end %>
        <% end %>
        <% if @shows.count % 3 != 0 %>
            </div>
        <% end %>
    </div>
</div>

<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <span class="copyright">Copyright &copy; dogshownetwork.com 2017</span>
            </div>
            <div class="col-md-4">
                <ul class="list-inline social-buttons">
                    <li><a href="#"><i class="fa fa-twitter"></i></a>
                    </li>
                    <li><a href="#"><i class="fa fa-facebook"></i></a>
                    </li>
                    <li><a href="#"><i class="fa fa-pinterest"></i></a>
                    </li>
                </ul>
            </div>
            <div class="col-md-4">
                <ul class="list-inline quicklinks">
                    <li><a href="#">Privacy Policy</a>
                    </li>
                    <li><a href="#">Terms of Use</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</footer>

